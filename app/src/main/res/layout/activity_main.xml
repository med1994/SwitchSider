<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mohamed.com.switchsider.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="368dp"
        android:layout_height="366dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062">

    </ImageSwitcher>

    <Button
        android:id="@+id/prevuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="prevuis"
        android:onClick="prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSwitcher"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/next"
        android:onClick="nextImg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="67dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="12dp"
        android:text="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prevuis"
        app:layout_constraintTop_toBottomOf="@+id/imageSwitcher" />
</android.support.constraint.ConstraintLayout>
